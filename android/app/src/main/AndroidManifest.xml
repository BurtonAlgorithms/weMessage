<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scott.wemessage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="scott.wemessage.app.weMessage"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".app.launch.LaunchActivity"
            android:theme="@style/AppTheme.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.activities.ChatListActivity"> </activity>
        <activity android:name=".app.activities.ConversationActivity"> </activity>

        <service android:name=".app.connection.ConnectionService" />
    </application>

</manifest>