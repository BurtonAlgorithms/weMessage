<?xml version="1.0" encoding="utf-8"?>
<scott.wemessage.app.ui.view.messages.media.AttachmentAudioView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/attachmentAudioBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/errorBubble">

        <ImageView
            android:id="@+id/audioPlayImage"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/audioCounterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/audioDurationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/errorBubble"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_error_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"/>
</scott.wemessage.app.ui.view.messages.media.AttachmentAudioView>