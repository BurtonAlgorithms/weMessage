<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:background="@drawable/bottom_sheet_frame">

    <scott.wemessage.app.ui.view.font.FontButton
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/conversationAttachmentSheetDownloadButton"
        android:text="@string/word_download"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/colorHeader"
        android:background="@drawable/bottom_sheet_button_frame_fill"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="OrkneyLight"
        android:layout_margin="8dp"/>
</LinearLayout>