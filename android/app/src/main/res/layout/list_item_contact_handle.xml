<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:show_mode="pull_out"
    app:clickToClose="true">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/handleSwipeButtonLayout"
        android:layout_width="168dp"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/setPrimaryHandleButton"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="@string/set_as_primary"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/purple_button_background_drawable"/>

        <TextView
            android:id="@+id/removeHandleButton"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="@string/word_remove"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/red_button_background_drawable"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <scott.wemessage.app.ui.view.font.FontTextView
                app:fontName="OrkneyLight"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:id="@+id/contactHandleTextView"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.daimajia.swipe.SwipeLayout>