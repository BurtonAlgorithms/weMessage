<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/galleryViewLayout"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/galleryImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/galleryFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/checkmarkView"/>

    <ImageView
        android:id="@+id/videoIndicatorView"
        android:src="@drawable/ic_videocam_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/galleryImageView"
        android:layout_alignStart="@id/galleryImageView"
        android:padding="4dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/checkmarkView"
        android:src="@drawable/checkmark_circle_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/galleryImageView"
        android:layout_alignBottom="@id/galleryImageView"
        android:padding="4dp"
        android:visibility="invisible"/>

</RelativeLayout>