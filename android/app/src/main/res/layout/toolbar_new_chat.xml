<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/newChatToolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorHeader"
    android:contentInsetStart="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetEnd="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <scott.wemessage.app.ui.view.font.FontTextView
            app:fontName="OrkneyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/new_message"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <scott.wemessage.app.ui.view.font.FontButton
            android:id="@+id/chatCreateCancelButton"
            app:buttonFontName="OrkneyMedium"
            android:background="@color/transparent"
            android:textColor="@drawable/button_text_white_drawable"
            android:text="@string/word_cancel"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>